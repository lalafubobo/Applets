}

.divLine {
  background: #87bf82;
  width: 20%;
  margin: 20rpx auto;
  height: 2rpx;
}

.triangle-right {
  position: relative;
  margin: 10rpx 0 0 10rpx;
  width: 0;
  height: 0;
  border-top: 20rpx solid transparent;
  border-left: 40rpx solid #87bf82;
  border-bottom: 20rpx solid transparent;
}
