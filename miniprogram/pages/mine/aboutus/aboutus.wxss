.box {
  box-shadow: 0 4px 8px 0 rgb(46, 46, 46);
  width: 90%;
  height: 1100rpx;
  border-radius: 5px;
  position: absolute;
  transition: all 1s;
  backface-visibility: hidden;
  cursor: pointer;
}

.bimg {
  width: 100%;
  height: 1100rpx;
  position: absolute;
  z-index: 6;
}
.b1{

  z-index: 999;
}
.b2 {
  background: rgb(255, 255, 255);
  transform: rotateY(-180deg);
  z-index: 1;
}

page {
  height: 100%;
}

.tx{
  position: absolute;
  margin-top: -45rpx;
