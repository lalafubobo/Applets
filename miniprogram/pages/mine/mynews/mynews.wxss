/*切换栏*/
.swiper-tab {
  height: 80rpx;
  line-height: 25px;
  background: #fff;
  color:rgb(122, 122, 122) ;
  display: flex;
  position: relative;
  z-index: 2;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  /* border-bottom:1px solid #87BF82; */
}
.swiper-tab-list {
  margin: 0 30px;
  padding: 0 4px;
  font-size: 28rpx;
}
.on {
  border-bottom:2px solid #87BF82;
  color: #292828;
  font-size: 30rpx;
}
.navTopList {
  display: flex;
  width: 100%;
  height: 70rpx;
  background: #fff;
  border-bottom: 1rpx solid #BEBEBE	;
  margin-top:5px;
}
 
.navTopList .order-info {
  text-align: center;
}
 
.navTopList .order-info view {
  width: 56rpx;
  height: 56rpx;
  margin-left: 31rpx;
}
 
.navTopList .order-info text {
  font-size: 34rpx;
}
 
.navTopList .order-info text.active {
  color: #ff6662;
}
 
.navTopList .ywc,.navTopList .dfk,.navTopList .yqx {
  flex: 1;
}
 
/*列表*/
.orderDetails {
  margin: 20rpx 0;
  background: white;
  border-bottom: 20rpx solid #f5f5f5;
}
.orderListTitle {
  /* margin-top: 20rpx; */
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #BEBEBE;
}
 
.orderListTitle .userName {
  padding-right: 50rpx;
  margin-left:10px;
  font-size:17px;
}
 
.orderListTitle .orderStatus {
  float: right;
  margin-right: 20rpx;
  color: #2f7b27;
  font-size: 15px;
}
 
.orderListDetails {
  margin-top:15rpx;
  display: flex;
  height: 200rpx;
  border-bottom: 1rpx solid #f3f3f3;
}
 
.orderListDetails .productInfo {
  flex: 4;
  margin: 40rpx 10px 20px 30rpx;
  font-size:14px;
 
}
 
.orderListDetails .productInfo .productTitle {
  font-size:14px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom:10px;
}
 
.productCount {
  height:80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f3f3f3;
  font-size:12px;
  color:#ccc;
}
 
.productCount>view {
  float: right;
  margin-right: 30rpx;
}


