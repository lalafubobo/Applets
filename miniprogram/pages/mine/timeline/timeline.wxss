/* pages/timeline/timeline.wxss */
.timeLine-top{
  margin: 30rpx auto;
  font-size: 28rpx;
  color:#87bf82;
}
.timeLine-top-e{
  margin: -5rpx auto;
  margin-bottom: 25rpx;
  font-size: 28rpx;
  font-family: 'Arial';
  color: rgb(192, 192, 192);
}

/*中间内容*/
.timeLine-content{
  z-index: 2;
  width: 100%;
  height: 150rpx; 
  /* border: 1rpx gray solid; */
  /* margin-top:20rpx; */
  display: flex;
  align-items: center;
  justify-content: center;
}
.content-left{
/* z-index: 2; */
width: 50%;
height: 150rpx;
border-right: 4rpx rgb(192, 192, 192) solid;
/* border-radius: 3rpx; */
}
.content-right{
/* z-index: 1;  */
width: 50%;
height: 150rpx;
border-left: 4rpx rgb(192, 192, 192) solid;
/* border-radius: 3rpx; */
}
.content-date-1{
  margin: 30rpx auto;
  width: 80%;
  height: 100rpx;
}
.content-date-2{
  margin: 10rpx auto;
  width: 80%;
  height: 100rpx;
}
.data-1{
  float: right;
  margin-top:32rpx; 
  font-size: 28rpx;
  font-family: 'Arial';
  color:#87bf82;
}
.data-2{
  float: left;
  margin-top:32rpx; 
  font-size: 28rpx;
  font-family: 'Arial';
  color:#87bf82;
}
.content-describe-1{
  float: right;
  margin-top:10rpx;
  width: 100%;
  height: 60%;
  border: #87bf82 2rpx solid;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.content-describe-2{
  float: left;
  margin-top:10rpx;
  width: 100%;
  height: 60%;
  border: #87bf82 2rpx solid;
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.content-describe-1-wz{
  width: 95%;
  height: 85%;
  background-color: #87bf82;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  text-align: center;
  line-height: 48rpx;
  font-size: 24rpx;
  color: white;
}
.content-describe-2-wz{
  width: 95%;
  height: 85%;
  background-color:#87bf82;
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  text-align: center;
  line-height: 48rpx;
  font-size: 24rpx;
  color: white;
}
.circle-1{
  position: relative;
  float: right;
  z-index: 99;
  border: 3px solid #000;
  border-radius: 100%;
  width: 8px;
  height: 8px;
  border-color:#87bf82;
  margin-top:35rpx;
  margin-right: -53rpx;
}
.circle-2{
  z-index: 99;
  float: left;
  margin-top:35rpx;
  margin-left: -53rpx;
  border: 3px solid #000;
  border-radius: 100%;
  width: 8px;
  height: 8px;
  border-color:#87bf82;
}
